<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".UserProfileSettings">
  <RadioGroup
    android:id="@+id/genderSelectorRadioGroup"
    android:layout_width="132dp"
    android:layout_height="0dp"
    android:layout_marginTop="164dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <RadioButton
      android:id="@+id/buttonMale"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Male" />
    <RadioButton
      android:id="@+id/buttonFemale"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Female" />
  </RadioGroup>
  <EditText
    android:id="@+id/dailyTargetInput"
    android:layout_width="134dp"
    android:layout_height="57dp"
    android:layout_marginTop="64dp"
    android:layout_marginStart="140dp"
    android:ems="10"
    android:inputType="number"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/genderSelectorRadioGroup" />
  <Button
    android:id="@+id/dailyTargetConfirmButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="300dp"
    android:layout_marginStart="40dp"
    android:onClick="confirmDailyTarget"
    android:text="Confirm"
    app:layout_constraintStart_toEndOf="@+id/dailyTargetInput"
    app:layout_constraintTop_toTopOf="parent" />
  <Button
    android:id="@+id/goToTimeEditorButton"
    android:layout_width="132dp"
    android:layout_height="58dp"
    android:layout_marginTop="80dp"
    android:layout_marginStart="140dp"
    android:onClick="goToTimeEditor"
    android:text="Edit wake up and bed time"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/dailyTargetInput" />
</androidx.constraintlayout.widget.ConstraintLayout>