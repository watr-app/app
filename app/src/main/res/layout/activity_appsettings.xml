<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Appsettings">
  <RadioGroup
    android:id="@+id/radioGroup3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="168dp"
    android:layout_marginEnd="141dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <RadioButton
      android:id="@+id/systemmetric"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Metric system" />
    <RadioButton
      android:id="@+id/systemimperial"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Imperial system" />
  </RadioGroup>
  <RadioGroup
    android:id="@+id/radioGroup4"
    android:layout_width="132dp"
    android:layout_height="62dp"
    android:layout_marginTop="80dp"
    app:layout_constraintStart_toStartOf="@+id/radioGroup3"
    app:layout_constraintTop_toBottomOf="@+id/radioGroup3">
    <RadioButton
      android:id="@+id/clock24h"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="24h clock" />
    <RadioButton
      android:id="@+id/clock12h"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="12h clock" />
  </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>